{
  "name": "selection-foreground",
  "displayName": "Selection Foreground Alternative",
  "description": "Enhance visibility of selected text",
  "version": "1.0.0",
  "publisher": "suxscribe",
  "categories": [
    "Other"
  ],
  "keywords": [
    "selection",
    "foreground",
    "highlight",
    "contrast",
    "color",
    "accessibility"
  ],
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/selection-foreground"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.93.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "selection-foreground.toggleHighlight",
        "title": "Selection Foreground: Toggle"
      }
    ],
    "configuration": {
      "title": "Selection Foreground",
      "properties": {
        "selection-foreground.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable",
          "order": 0
        },
        "selection-foreground.textColor": {
          "type": "string",
          "default": "#000000",
          "description": "Color of the selected text",
          "format": "color",
          "order": 1
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
